defaults
  log global
  source <%=node['bcpc']['management']['vip']%>
  mode http
  option http-server-close
  option abortonclose
  option tcplog
  option dontlognull
  option redispatch
  retries 3
  timeout http-request 10s
  timeout queue 1m
  timeout connect 5s
  timeout check 10s
  timeout client 30m
  timeout server 30m
